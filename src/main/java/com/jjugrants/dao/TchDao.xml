<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.jjugrants.dao.TchDao">
    <select id="login" resultType="teacher">
        select * from teacher where workId = #{workId} and password = #{pwd}
    </select>
    <select id="count" resultType="map">
        select count(*) as value from teacher
    </select>
    <select id="countReview" resultType="map">
        select count(*) as value from review
    </select>
</mapper>





